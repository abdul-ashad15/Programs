@model IEnumerable<XEPR.Models.CustomEmployeeModel>
@{
    ViewBag.Title = "Employee List";
}

<h2>Employee List</h2>

<p>
    @Html.ActionLink("Create New", "CreateEmployee")
</p>
<style>
    th {
        width: 100px;
    }
</style>
<table>
    <tr>
        <th>
            Win ID
        </th>
        <th>
            FirstName
        </th>
        <th>
            LastName
        </th>
        <th>
            Gender
        </th>
        <th>
           EmailAddress
        </th>
        <th>
            Department
        </th>
        <th>Action</th>
        <th>Details</th>
        <th>Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmpWinId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td style="width:auto">
                @Html.ActionLink("Edit", "EditEmployee", new { id = item.EmployeeId })
            </td>
            <td>
                @Html.ActionLink("Details", "EmployeeDetails", new { id = item.EmployeeId })
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteEmployee", new { id = item.EmployeeId }, new { onclick = "return confirm('Are you sure you want to delete employee with ID="+@item.EmpWinId+"');" })
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Back to Home Page", "AdminPage", "Admin", new { area = "Administrator" }, null)
</div>