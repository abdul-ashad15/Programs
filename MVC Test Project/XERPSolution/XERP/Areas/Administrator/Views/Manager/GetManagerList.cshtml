@model List<XEPR.Models.CustomManagerView>

@{
    ViewBag.Title = "Manager List";
}

<h2>Manager List View</h2>

<p>
    @Html.ActionLink("Create New Manager", "CreateManager", "Manager")
</p>
<table border="1">
    <tr>
        <th>Fisrt Name</th>
        <th>
           Last Name
        </th>
        <th>
            WINID
        </th>
        <th>
            DOB
        </th>
        <th>
            Gender
        </th>
        <th>
            DOJ
        </th>
        <th>
            Email
        </th>
        <th>
            Department
        </th>
        <th>Edit</th>
        <th>Details</th>
        <th>Delete</th>
    </tr> 
    @if (Model != null && Model.Count > 0)
    {
        foreach (var item in Model)
        {
       
     
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManagerWinId)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOJ)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>                
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.ActionLink("Edit", "ModifyManager", new { id = item.ManagerId })
            </td>
            <td>
                @Html.ActionLink("Details", "GetManager", new { id = item.ManagerId })
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteManager", new { id = item.ManagerId }, new { onclick = "return confirm('Are you sure to delete record?');" })
            </td>
        </tr>
    
        }
    }
    
</table>
<div>
    @Html.ActionLink("Back to Home Page", "AdminPage", "Admin", new { area = "Administrator" }, null)
</div>
