@model IEnumerable<XEPR.Models.CustomEmployeeModel>
@{
    ViewBag.Title = "AssesmentLists"; 
}

<h2>Employee Assessment List  </h2>
<style>
    th
    {
        width: 200px;
        height:40px;
    }
</style>
<table>
    <tr>
        <th> Win ID </th>
        <th> First Name </th>
        <th> Last Name </th>
        <th> Assessment  Submitted </th>
    </tr>
        @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmpWinId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @{
                    if (item.IsEmployeeSubmitted==true)
                    { 
                       @Html.ActionLink("Review Assessment", "DisplayEmployeeAssementDetails", new { EmpWinId = item.EmpWinId })
                    }
                    else
                    {
                       <text><b>Not Submitted </b></text>
                    }                    
                }
            </td>
        </tr>
    }
</table>
