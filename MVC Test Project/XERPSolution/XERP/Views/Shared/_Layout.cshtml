<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Xerox Employee Performance Review</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
</head>
<body>
    <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">Xerox Employee Performance Review</p>
                </div>
                <div class="float-right">
                    <section id="login">
                       <img src="~/Images/Xerox_Logo.jpg" alt="Test" />
                      @*@Html.Partial("_LoginPartial")*@
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("Employee", "EmpLogin", "Employee", new { area = "Employee" }, null)</li>
                            <li>@Html.ActionLink("Manager", "ManagerLogin", "Manager", new { area = "Manager" }, null)</li>
                            <li>@Html.ActionLink("Admin", "Login", "Admin", new { area = "Administrator" }, null)</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
    </div>
    <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Xerox Business Services India Private Limited .</p>
                </div>
            </div>
        </footer>
    @RenderSection("scripts", required: false)
</body>
</html>
